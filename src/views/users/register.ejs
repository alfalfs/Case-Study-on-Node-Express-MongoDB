<div class="container">
    <div class="card signing pt-2">
        <div class="card-header">
            <div class="text-center">
                <h2>SIGN UP</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-2">

            </div>
            <div class="col-sm-8">

                <form id="regForm" action="/login/signup" method="POST" class="needs-validation" validate>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="uname">First name:</label>
                                <input type="text" class="form-control" id="uname" placeholder="First name" name="fname" onchange="return validateName(this.value);" required minlength="3">
                                <span style="background-color:rgb(255, 255, 255);" id="nmsg"></span>
                                <div class="valid-feedback">Filled</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="uname">Last name:</label>
                                <input type="text" class="form-control" id="uname" placeholder="Last name" name="lname" onchange="return validateName(this.value);" required minlength="3">
                                <span style="background-color:rgb(255, 255, 255);" id="nmsg"></span>
                                <div class="valid-feedback">Filled</div>
                                <div class="invalid-feedback">Please fill out this field.</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="email">Email-id:</label>
                                <input type="email" class="form-control" id="uemail" placeholder="Enter email-id" name="uemail" onchange="return validateEmailid(this.value);" required>
                                <span style="background-color:rgb(255, 255, 255);" id="emsg"></span>
                                <div class="valid-feedback">Filled.</div>
                                <div class="invalid-feedback">Please fill out this field with email.</div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="phone">Phone:</label>
                                <input type="text" class="form-control" id="uphone" placeholder="Enter phone" name="uphone" onkeypress="return numbersOnly(event);" onchange=" return validatePhone(this.value);" required maxlength="10">
                                <span style="background-color:rgb(255, 255, 255);" id="pmsg"></span>
                                <div class="valid-feedback">Filled matched .</div>
                                <div class="invalid-feedback">Please fill out this field with number .</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label for="pwd">Password:</label>
                                <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd" onkeyup="validatePassword(this.value); confirmpwd();" required minlength="8">
                                <span style="background-color:rgb(255, 255, 255);" id="msg"></span>
                                <div class="valid-feedback">Filled.</div>
                                <div class="invalid-feedback">Please fill out this field with password .</div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="cpwd">Confirm Password:</label>
                                <input type="password" class="form-control" id="confirm_pwd" placeholder="Enter confirm password" name="cpwd" onkeyup="confirmpwd();" required minlength="8">
                                <span style="background-color:rgb(255, 255, 255);" id="cmsg"></span>
                                <div class="valid-feedback">Filled.</div>
                                <div class="invalid-feedback">Please fill same password as confirm password.</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col ">
                            <div class="form-group">
                                <label for="validationTextarea">Address</label>
                                <textarea class="form-control " id="validationTextarea" placeholder="Your Address" name="uaddress" required></textarea>
                                <div class="invalid-feedback">
                                    Please enter your address here.
                                </div>
                            </div>
                        </div>
                        <div class="col ">

                            <div class="row">
                                <div class="form-group pl-3 pt-2">
                                    <label for="gender">Gender:</label>
                                    <div class="form-check radio form-check-inline">
                                        <input class="form-check-input" type="radio" name="ugender" id="inlineRadio1" value="male" required>
                                        <label class="form-check-label" for="inlineRadio1">Male</label>
                                    </div>
                                    <div class="form-check  radio form-check-inline">
                                        <input class="form-check-input" type="radio" name="ugender" id="inlineRadio2" value="female" required>
                                        <label class="form-check-label" for="inlineRadio2">Female</label>
                                    </div>
                                    <div class="form-check radio form-check-inline">
                                        <input class="form-check-input" type="radio" name="ugender" id="inlineRadio3" value="other" required>
                                        <label class="form-check-label" for="inlineRadio3">Other</label>
                                    </div>
                                    <div class="valid-feedback">Filled.</div>
                                    <div class="invalid-feedback">Please select gender.</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group pl-3 pt-0">
                                    <label for="gender">DOB:</label>
                                    <input type="date" class="form-control-inline" id="birthday" name="udob" max="2010-01-01" onchange="validateAge(this.value);" required>
                                    <span style="background-color:rgb(255, 255, 255);" id="agemsg"></span>
                                    <div class="valid-feedback">Filled.</div>
                                    <div class="invalid-feedback">Please fill date before 2010.</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group pl-3 pt-0">
                                    <label for="gender">Role:</label>
                                    <div class="form-check radio form-check-inline">
                                        <input class="form-check-input" type="radio" name="role" id="inlineRadio1" value="student" required>
                                        <label class="form-check-label" for="inlineRadio1">Student</label>
                                    </div>
                                    <div class="form-check  radio form-check-inline">
                                        <input class="form-check-input" type="radio" name="role" id="inlineRadio2" value="admin" required>
                                        <label class="form-check-label" for="inlineRadio2">Admin</label>
                                    </div>
                                    <div class="valid-feedback">Filled.</div>
                                    <div class="invalid-feedback">Please fill out this field.</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="remember" required> I agree T&C
                               <div class="valid-feedback"></div>
                                <div class="invalid-feedback">Check this checkbox to continue.</div>
                        </label>
                        <span> <a href="t&c.html" style="text-align: right;"> Read T&C</a></span>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Register</button>
                </form>
            </div>
            <div class="col-sm-2">

            </div>
        </div>

    </div>
</div>
</div>